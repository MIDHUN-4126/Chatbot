{
  "manifest_version": 3,
  "name": "Tamil Nadu Government Assistant",
  "version": "1.0.0",
  "description": "AI-powered assistant for Tamil Nadu government services - தமிழ்நாடு அரசு சேவைகள் உதவியாளர்",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "http://localhost:5000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.tn.gov.in/*",
        "*://*.tnedistrict.gov.in/*",
        "*://*.tnpsc.gov.in/*",
        "*://*.tnpolice.gov.in/*",
        "*://*.tnskdc.org/*",
        "*://*.tnpds.gov.in/*",
        "http://localhost/*",
        "http://127.0.0.1/*"
      ],
      "js": ["content.js"],
      "css": ["widget.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "Tamil Nadu Govt Assistant"
  },
  "web_accessible_resources": [
    {
      "resources": ["widget.html", "icons/icon-16.png", "icons/icon-48.png", "icons/icon-128.png"],
      "matches": [
        "*://*.tn.gov.in/*",
        "*://*.tnedistrict.gov.in/*",
        "*://*.tnpsc.gov.in/*",
        "*://*.tnpolice.gov.in/*",
        "*://*.tnskdc.org/*",
        "*://*.tnpds.gov.in/*",
        "http://localhost/*",
        "http://127.0.0.1/*"
      ]
    }
  ]
}
